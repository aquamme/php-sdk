{
  "name": "dapr/php-sdk",
  "type": "library",
  "description": "Dapr Implementation in PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Rob Landers",
      "email": "landers.robert@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "psr/log": "^1.1",
    "nette/php-generator": "^3.5",
    "php-di/php-di": "^6.3",
    "monolog/monolog": "^2.2",
    "nikic/fast-route": "^1.3",
    "nyholm/psr7": "^1.3",
    "nyholm/psr7-server": "^1.0",
    "php-di/invoker": "^2.3",
    "laminas/laminas-httphandlerrunner": "^1.3"
  },
  "suggest": {
    "grpc/grpc": "Allows using the GRPC client without an extension",
    "ext-grpc": "For better performance, install the grpc extension",
    "ext-protobuf": "For better performance, install the protobuf C extension.",
    "google/protobuf": "To get started using grpc quickly, install the native protobuf library."
  },
  "require-dev": {
    "ext-xdebug": "*",
    "vimeo/psalm": "^4.3",
    "phpunit/phpunit": "^9",
    "google/protobuf": "^3.15",
    "grpc/grpc": "^1.35"
  },
  "autoload": {
    "psr-4": {
      "Dapr\\": "src/lib",
      "Dapr\\TestActors\\": "test/actors",
      "Dapr\\Proto\\": "src/grpc-generated/Dapr/Proto",
      "GPBMetadata\\": "src/grpc-generated/GPBMetadata"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --testdox tests --coverage-clover coverage.xml tests --whitelist src",
    "start": [
      "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose build --pull",
      "docker-compose up -d"
    ],
    "dapr-init": [
      "dapr init --runtime-version 1.0.0"
    ],
    "clean": [
      "docker-compose stop",
      "docker-compose rm -fv"
    ],
    "integration-tests": [
      "curl localhost:9502/do_tests"
    ],
    "lint": "./vendor/bin/psalm",
    "update-protos": "docker build --target=php-protos --output type=local,dest=./src -f images/grpc.Dockerfile ."
  }
}
